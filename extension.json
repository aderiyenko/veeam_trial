{
  "version": "1.0",
  "description": "Extension that displays currency exchange rates on a special page",
  "manifest_version": 2,
  "name": "Currency Exchange Rates Extension",
  "author": "Oleksiy Deriyenko",
  "license-name": "GPL v2",
  "type": "other",
  "AutoloadNamespaces": {
    "MediaWiki\\Extension\\ExchangeRates\\": "src/"
  },
  "SpecialPages": {
    "ExchangeRates": "MediaWiki\\Extension\\ExchangeRates\\ExchangeRates"
  },
  "ExtensionMessagesFiles": {
    "ExchangeRatesAlias": "ExchangeRates.i18n.alias.php"
  },
  "requires": {
    "MediaWiki": ">= 1.38.0",
    "platform": {
      "php": ">= 5.6"
    }
  },
  "ResourceModules": {
    "exchange.rates": {
      "scripts": [
        "extensions/ExchangeRates/resources/exchange_rates.js"
      ],
      "styles": [
        "extensions/ExchangeRates/resources/exchange_rates.css"
      ]
    }
  }
}
